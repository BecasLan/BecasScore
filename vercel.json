{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/leaderboard",
      "dest": "/api/leaderboard.ts"
    },
    {
      "src": "/api/violations/(.*)",
      "dest": "/api/violations.ts?userId=$1"
    },
    {
      "src": "/api/user/(.*)",
      "dest": "/api/user.ts?userId=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_ANON_KEY": "@supabase_anon_key"
  }
}
